doctype html
html
  head
    block title
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css')
    script(type='text/javascript', src='http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.11.2.min.js')
    script(type='text/javascript', src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')
    script(type='text/javascript', src='/public/scripts/offcanvas.js')
    link(rel='stylesheet', href='/public/styles/offcanvas.css')    
    link(rel='stylesheet', href='/public/styles/app.css')
body
    nav#myNavbar(class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation")
      div.container
          div.navbar-header
              button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-collapse")
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
              a.navbar-brand(href="#") Project name
          div#navbarCollapse(class="collapse navbar-collapse")
              ul(class="nav navbar-nav")
                  li.active
                    a(href="http://www.tutorialrepublic.com" target="_blank") Home
                  li
                    a(href="http://www.tutorialrepublic.com/about-us.php" target="_blank") About
                  li
                    a(href="http://www.tutorialrepublic.com/contact-us.php" target="_blank") Contact
              if !session || !session.email      
                form.navbar-form.navbar-right
                  div.form-group
                    input.form-control(type="text" placeholder="Email")
                  div.form-group
                    input.form-control(type="password" placeholder="Password")
                  button.btn.btn-success(type="submit") Sign in
              else
                  span #{session.email}
                  a#logout(href='/logout') Log Out    
    div.container
      if message
        div.row
          div.col-md-12
            div.alert(class='alert-' + message.type)
              a.close(data-dismiss="alert") &times;
              span=message.message
       div.row.row-offcanvas.row-offcanvas-right
        div.col-xs-12.col-sm-9 
          p.pull-right.visible-xs
            button.btn.btn-primary.btn-xs(type="button" data-toggle="offcanvas") Toggle nav
          div.jumbotron
            block content
        div.col-md-3.sidebar-offcanvas(id="sidebar" role="navigation")
          div.well.sidebar-nav
            ul.nav
              li Sidebar
              li.active 
                a(href="#") Link
              li 
                a(href="#") Link  
              li 
                a(href="#") Link      
              li Sidebar
              li.active 
                a(href="#") Link
              li 
                a(href="#") Link  
              li 
                a(href="#") Link                                

